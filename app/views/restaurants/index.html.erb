<div class="container-fluid page">
  <h5 class="text-center">Delivery to:</h5>
  <p class="text-danger text-center">Home</p>
  <% if @restaurants.any? %>
    <div class="row d-flex justify-content-center">
      <% @restaurants.each do |restaurant| %>
        <div class="col-8 col-md-8 col-lg-4 text-center">
          <%= link_to "/restaurants/#{restaurant.id}", class: "text-decoration-none text-dark" do %>
            <div class="p-3 border bg-light mb-3 rounded">
              <h3><%= image_tag("#{restaurant.image}", :alt => "", class: "image") %></h3>
              <h5><%= "#{restaurant.name}" %></h5>
              <p class="text-secondary fs-6"><%= "#{restaurant.category}" %></p>
              <p class="mb-2 fs-6">delivery_fee: ï¿¥<%= "#{restaurant.delivery_fee}" %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= will_paginate @restaurants %>
    </div>
  <% else %>
  <p>There are no Restaurants</p>
  <% end %>
</div>