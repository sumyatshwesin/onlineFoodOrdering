<div class="container-fluid page">
  <h5 class="text-center">プロフィール</h5>
  <div class="user-border col-lg-4 col-md-4 col-sm-4 container justify-content-center">
    <div class="pt-2">
      <span>名前：</span>
      <span class="margin"><%= @user.name %></span>
    </div>
    <div class="pt-2">
      <span>住所：</span>
      <span class="margin"><%= @user.address %></span>
    </div>
    <div class="pt-2">
      <span>電話番号：</span>
      <span class="margin-phone"><%= @user.phone_number %></span>
    </div>
    <div class="pt-2">
      <span>メール：</span>
      <span class="margin"><%= @user.email %></span>
    </div>
    <div class="mt-3">
      <%= form_with url: "/users/edit", method: :get, local: true do |form| %>
        <div class="mb-4 mt-5 text-center">
          <%= form.submit "編集", class: "mb-4 update-button" %><br>
        </div>
      <% end %>
    </div>
  </div>
</div>