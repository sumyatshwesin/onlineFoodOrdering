<div class="container-fluid page">
  <h3 class="text-center">ユーザー編集</h3>
  <div class="border rounded user-login bg-light col-lg-4 col-md-4 col-sm-4 container justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="row mt-2 <% if resource.errors[:name].present? %>error<% end %>">
        <div class="col-5">
          <%= f.label :名前 %>
        </div>
        <div class="col-7">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          <% if resource.errors[:name].present? %>
            <% resource.errors[:name].each do |msg| %>
              <span class="text-danger"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row mt-2 <% if resource.errors[:address].present? %>error<% end %>">
        <div class="col-5">
          <%= f.label :住所 %>
        </div>
        <div class="col-7">
          <%= f.text_field :address, autocomplete: "address" %>
          <% if resource.errors[:address].present? %>
            <% resource.errors[:address].each do |msg| %>
              <span class="text-danger"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row mt-2 <% if resource.errors[:phone_number].present? %>error<% end %>">
        <div class="col-5">
          <%= f.label :電話番号 %>
        </div>
        <div class="col-7">
          <%= f.text_field :phone_number, autocomplete: "phone_number" %>
          <% if resource.errors[:phone_number].present? %>
            <% resource.errors[:phone_number].each do |msg| %>
              <span class="text-danger"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row mt-2 <% if resource.errors[:email].present? %>error<% end %>">
        <div class="col-5">
          <%= f.label :Eメール %>
        </div>
        <div class="col-7">
          <%= f.email_field :email, autocomplete: "email", autocomplete: "email", :disabled => true %>
          <% if resource.errors[:email].present? %>
            <% resource.errors[:email].each do |msg| %>
              <span class="text-danger"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row mt-2 <% if resource.errors[:password].present? %>error<% end %>">
        <div class="col-5">
          <%= f.label :パスワード %> <i>(変更したくない場合は空白のままにします)</i>
        </div>
        <div class="col-7">
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if resource.errors[:password].present? %>
            <% resource.errors[:password].each do |msg| %>
              <span class="text-danger"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-5">
          <%= f.label :パスワード（確認用） %>
        </div>
        <div class="col-7">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row mt-2 <% if resource.errors[:current_password].present? %>error<% end %>">
        <div class="col-5">
          <%= f.label :現在のパスワード %>
        </div>
        <div class="col-7">
          <%= f.password_field :current_password, autocomplete: "new-password" %>
          <% if resource.errors[:current_password].present? %>
            <% resource.errors[:current_password].each do |msg| %>
              <span class="text-danger"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <div class="actions">
          <%= f.submit "編集", class:"update-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
