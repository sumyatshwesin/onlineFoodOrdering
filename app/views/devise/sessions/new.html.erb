<div class="container-fluid page">
  <h3 class="text-center">ロクイン</h3>
  <div class="border rounded user-login bg-light col-lg-4 col-md-4 col-sm-4 container justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row mt-2 <% if resource.errors[:email].present? %>error<% end %>">
        <div class="col-4">
          <%= f.label :email %>
        </div>
        <div class="col-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <% if resource.errors[:email].present? %>
            <ul>
              <% resource.errors[:email].each do |msg| %>
                <li class="text-danger"><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>

      <div class="row mt-3 <% if resource.errors[:password].present? %>error<% end %>">
        <div class="col-4">
          <%= f.label :password %>
        </div>
        <div class="col-7">
          <%= f.password_field :password, autocomplete: "current-password" %>
          <% if resource.errors[:password].present? %>
            <ul>
              <% resource.errors[:password].each do |msg| %>
                <li class="text-danger"><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-3 field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-center mt-4">
        <%= f.submit "ロクイン", class: "login-button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
